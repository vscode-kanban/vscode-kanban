    <title><%= title %></title>
  </head>

  <body>
    <div id="vscode-kanban-board"></div>

    <!-- scripts -->
    <script nonce="<%- nonce %>" src="<%- globalScriptUri %>"></script>

    <!-- JSX components -->
    <script nonce="<%- nonce %>" src="<%- componentsUri %>/board.jsx" type="text/babel"></script>
  </body>
</html>