<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- styles -->
    <link href="<%- rootUri %>/css/bootstrap.min.css" rel="stylesheet">
    <link href="<%- rootUri %>/css/bootstrap-<%- colorMode %>.min.css" rel="stylesheet">
    <link href="<%- rootUri %>/css/main.css" rel="stylesheet">

